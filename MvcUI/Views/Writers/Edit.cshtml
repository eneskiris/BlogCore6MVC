@model Entities.Concrete.Writer

@{
    ViewBag.Title = "title";
    Layout = "/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h1>Update</h1>
<form method="post">
    <label>Id</label>
    <input asp-for="WriterId" type="number" class="form-control">
    <br>
    <label>Full Name</label>
    <input asp-for="FullName" type="text" class="form-control">
    <br>    
    <label>About</label>
    <input asp-for="About" type="text" class="form-control">
    <br>    
    <label>Image</label>
    <input asp-for="Image" type="text" class="form-control">
    <br>    
    <label>Email</label>
    <input asp-for="Email" type="text" class="form-control">
    <br>    
    <label>Status</label>
    <input asp-for="Status" type="text" class="form-control">
    <br>
    <button class="btn btn-outline-success">Update</button>
</form>