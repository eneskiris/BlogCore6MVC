@model IEnumerable<Entities.Concrete.Comment>
<div class="comment-top">
    <h4>Comments</h4>
    @if (!Model.Any())
    {
        <p>Bu Blogda Henüz Yorum Yapılmadı İlk Yorumu Siz Yapın.</p>
    }
    else
    {
        foreach (var item in Model)
        {
            <div class="media">
                <img src="~/web/images/t1.jpg" alt="" class="img-fluid"/>
                <div class="media-body">
                    <h5 class="mt-0">@item.UserName</h5>
                    <p>
                        @item.Content
                    </p>

                </div>
            </div>
        }
    }
</div>