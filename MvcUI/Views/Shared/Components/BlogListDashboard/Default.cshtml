@model List<Entities.Concrete.Blog>
<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Last 10 Blogs</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th> # </th>
                            <th> Title </th>
                            <th> Category </th>
                            <th> Date </th>
                            <th> Details </th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="@item.ThumbnailImage" class="mr-2" alt="image">
                                </td>
                                <td>
                                    @item.Title
                                </td>
                                <td>
                                    <label class="badge badge-gradient-success">@item.Category.CategoryName</label>
                                </td>
                                <td> @item.CreateDate.ToString("yyyy-M-d dddd") </td>
                                <td>
                                    <a asp-controller="Blog" asp-action="ReadAll" asp-route-id="@item.BlogId" 
                                    class="btn btn-dark">Details</a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>