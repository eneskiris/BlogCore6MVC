@model Entities.Concrete.Writer
@{
    ViewBag.Title = "title";
    Layout = "UserLayout";
}
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="lib/jquery/dist/jquery.js"></script>
<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Register Now</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <form asp-action="Index" asp-controller="Register" method="post">
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">First name</label>
                            <input type="text" class="form-control" asp-for="FullName" required="">
                            @Html.ValidationMessageFor(x => x.FullName, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">E-mail</label>
                            <input type="email" class="form-control" asp-for="Email" required="">
                            @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Password</label>
                            <input type="password" class="form-control" asp-for="Password" required="">
                            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Image</label>
                            <input type="text" class="form-control" asp-for="Image" required="">
                        </div>

                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Register</button>
                    <p>
                        <a id="terms" href="#">By clicking Signup, I agree to your terms</a>
                    </p>
                </form>

            </div>
        </div>
    </div>
    <br>
    <script >
        
            $("#terms").click(function () {
                swal("Terms and Conditions", "1. You must be 18 years or older to use this site. 2. You must be a human to use this");});
    </script>
</section>