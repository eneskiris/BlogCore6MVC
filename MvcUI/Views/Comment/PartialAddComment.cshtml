<div class="comment-top">
    <h4>Leave a Comment</h4>
    <div class="comment-bottom">
        <form method="post">
            <input id="username" class="form-control" type="text" name="UserName" placeholder="Full Name" required="">
            <input id="title" class="form-control" type="text" name="Title" placeholder="Title" required="">
            <textarea id="content" class="form-control" name="Content" placeholder="Message..." required=""></textarea>
            <button id="submit" type="submit" class="btn btn-primary submit">Submit</button>
        </form>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.1.min.js" ></script>
<script >
    $(document).ready(function () {
        $("#submit").click(function () {
            var username = $("#username").val();
            var title = $("#title").val();
            var content = $("#content").val();
            var BlogId= @Context.GetRouteData().Values["id"];
            $.ajax({
                url: "/Comment/PartialAddComment/",
                type: "POST",
                data: { UserName: username, Title: title, Content: content,BlogId:BlogId },
                success: function () {
                    window.location.reload();
                    
                }
        });
    })});
</script>