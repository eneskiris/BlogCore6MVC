@model System.Collections.Generic.List<Entities.Concrete.MessageWithWriter>

@{
    ViewBag.Title = "title";
    Layout = "WriterLayout";
}

<h1>Sendbox</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Content</th>
        <th>Receiver</th>
        <th>Date</th>
        <th>Open</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.MessageId</td>
            <td>@item.Subject</td>
            <td>@item.ReceiverUser.FullName</td>
            <td>@item.Date.ToString("yyyy-M-d dddd")</td>
            <td>
                <a asp-controller="Message" asp-action="MessageDetails" asp-route-id="@item.MessageId" class="btn 
                btn-warning">
                    Open Message
                </a>
            </td>
        </tr>
    }
</table>
<a asp-action="SendMessage" asp-controller="Message" class="btn btn-primary">New Message</a>
